FROM maven:3.9-eclipse-temurin-21 AS build
WORKDIR /app
COPY pom.xml .
COPY shelveit-backend/pom.xml ./shelveit-backend/
COPY shelveit-cli/pom.xml ./shelveit-cli/
COPY shelveit-web/pom.xml ./shelveit-web/
COPY shelveit-cli/src ./shelveit-cli/src
RUN mvn clean package -pl shelveit-cli -DskipTests

FROM eclipse-temurin:21-jre
WORKDIR /app
COPY --from=build /app/shelveit-cli/target/shelveit-cli.jar app.jar
ENTRYPOINT ["java", "-jar", "app.jar"]

