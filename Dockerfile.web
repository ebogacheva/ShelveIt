FROM maven:3.9-eclipse-temurin-21 AS build
WORKDIR /app
COPY pom.xml .
COPY shelveit-backend/pom.xml ./shelveit-backend/
COPY shelveit-cli/pom.xml ./shelveit-cli/
COPY shelveit-web/pom.xml ./shelveit-web/
COPY shelveit-web/src ./shelveit-web/src
RUN mvn clean package -pl shelveit-web -DskipTests

FROM eclipse-temurin:21-jre
WORKDIR /app
COPY --from=build /app/shelveit-web/target/shelveit-web.jar app.jar
EXPOSE 8080
ENTRYPOINT ["java", "-jar", "app.jar"]

